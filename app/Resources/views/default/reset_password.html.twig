{% extends 'base.html.twig' %}

{% block title %}
    - Rénitialiser votre mot de passe
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block navLinks %}
    <li><a href="#" class="modal-load__register" data-toggle="modal" data-target="#register" data-url="{{ path('modal_register') }}">S'inscrire</a></li>
    <li><a href="#" class="modal-load__connect" data-toggle="modal" data-target="#connect" data-url="{{ path('modal_login') }}">Se connecter</a></li>
{% endblock %}

{% block body  %}
    <div class="container">
        <div class="col-xs-12 col-sm-8">
            <h4 class="heading">Réinitialisez votre mot de passe</h4>
            {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}
                {{ form_row(form.resetPassword) }}
                <button type="submit" class="btn bgcolor-accent" formnovalidate><span class="fa fa-check" aria-hidden="true"></span> Valider</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
